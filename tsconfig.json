{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": [
        "src",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}